<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bams.android.examensqlite.PlatosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE:" />

        <EditText
            android:id="@+id/txtNombrePlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NOMBRE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRECIO:" />

        <EditText
            android:id="@+id/txtPrecioPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PRECIO"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION:" />

        <EditText
            android:id="@+id/txtDescripcionPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DESCRIPCION" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSUMOS:" />

        <EditText
            android:id="@+id/txtInsumosList"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INSUMOS" />

        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSERTAR" />

        <Button
            android:id="@+id/btnVerLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER LISTA" />

        <Button
            android:id="@+id/btnEliminarLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELIMINAR" />

        <Button
            android:id="@+id/btnAgregarInsumos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR INSUMOS" />


    </LinearLayout>
</FrameLayout>
